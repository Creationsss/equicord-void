# Template file for 'libkcompactdisc'
pkgname=libkcompactdisc
version=25.12.2
revision=1
_kde_project="multimedia/libkcompactdisc"
build_style=cmake
hostmakedepends="extra-cmake-modules pkg-config gettext qt6-base-devel"
makedepends="kf6-solid-devel kf6-ki18n-devel phonon-devel"
short_desc="Library for interfacing with CDs"
maintainer="creations <creations@creations.works>"
license="GPL-2.0-or-later, LGPL-2.0-or-later"
homepage="https://invent.kde.org/multimedia/libkcompactdisc"
distfiles="https://download.kde.org/stable/release-service/${version}/src/libkcompactdisc-${version}.tar.xz"
checksum=02e5bb5330a2dd9fbae0dba1e1c8536a78dc1f88ba2756e8b96f928156d3c180

libkcompactdisc-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}
